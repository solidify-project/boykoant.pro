<html>
<head>
	{{> _head.hjs }}

    <title>{{ Page.Title }}</title>
</head>
<body>
    
    {{> header.hjs }}

	{{> banner.hjs }}
	
	<!-- Main Content Container -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div>
                    <h2>
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Latest Events
                    </h2>
                </div>
            </div>
        </div>
    </div>

    {{# Data.events.year2018 }}
        <div class="container-fluid marginBetweenContentBlocks contentBlockRippleBgnd">
            <div class="row eventBlockGlobe">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                    <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                        <div class="eventBlockDateAndLocation marginTopTwentypx">
                            <p>
                                {{ date }}
                            </p>
                            <p>
                                {{ location }}
                            </p>
                        </div>

                        <div class="eventBlockDisclaimer">
                            {{{ role }}}
                        </div>

                        {{# topic }}
                        <div>
                            <h3>
                                {{ topic }}
                            </h3>
                        </div>
                        {{/ topic }}

                        <div class="eventBlockDescription">
                            {{# description }}
                                <p>{{ . }}</p>
                            {{/ description }}
                        </div>
                    </div>

                    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                        <img alt="{{ topic }} at {{ location }} on {{ date }} with Anton Boyko" src="{{ imgCover }}" class="img-responsive" />
                    </div>

                </div>
            </div>
            <!-- container ends -->
        </div>
    {{/ Data.events.year2018 }}
	
	{{> banner-blog.hjs }}
    
    {{> footer.hjs }}
    
</body>
</html>